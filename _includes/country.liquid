<!doctype html>
<html lang="en">
    <head>
        {% include head.liquid %}
        <script src="/js/country.js"></script>
    </head>
    <body class="country">
        <header>
        {% include header.liquid %}
        </header>
        {% include menu.liquid %}
        <main>
        {{ url || countryheader: countries }}
        <section class="header-image">
            <div style="background-image: url({{ headerImage }});"> </div>
            <h1>{{ pageTitle }} </h1>
            <div class="subblock">
            </div>
        </section>
        <div class="row">
            <div class="column-main">
                {{ content }}
            </div>
            <div class="column-side">

            </div>

        </main>
        <aside>
            {% include sidebar.liquid %}
        </aside>
        <footer>
            {% include footer.liquid %}
        </footer>
    </body>
</html>